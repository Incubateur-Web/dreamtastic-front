    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.64",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "faker": "^5.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "tailwindcss": "^1.8.12",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "autoprefixer": "9.8.6",
    "cssnano": "^4.1.10",
    "husky": "^4.3.0",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "postcss-combine-duplicated-selectors": "^10.0.2",
    "postcss-merge-longhand": "^4.0.11",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2"
  },
  "scripts": {
    "start": "npm run start:css && react-scripts start",
    "build": "NODE_ENV=production npm run build:css && react-scripts build",
